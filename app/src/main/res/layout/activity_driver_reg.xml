<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:drawableRight="@drawable/ic_action_reg"
        android:ems="20"
        android:text="Register for Driver"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp"
        android:typeface="serif" />


    <EditText
        android:id="@+id/fname"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="80dp"
        android:background="#11000000"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />


    <EditText
        android:id="@+id/lname"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="78dp"
        android:background="#11000000"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="146dp"
        android:background="#11000000"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />


    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="215dp"
        android:background="#11000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/titype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_marginStart="307dp"
        android:layout_marginLeft="307dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="481dp"
        android:background="@drawable/ic_password_eye" />

    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="26dp"
        android:background="#11000000"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/titype1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/confirmpassword"
        android:layout_alignLeft="@+id/confirmpassword"
        android:layout_alignEnd="@+id/confirmpassword"
        android:layout_alignRight="@+id/confirmpassword"
        android:layout_alignParentTop="true"
        android:layout_marginStart="308dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_password_eye" />


    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/confirmpassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="74dp"
        android:background="#11000000"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/address"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="430dp"
        android:background="#11000000"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/licensenumber"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_below="@+id/address"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:hint="Driver's License Number"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:background="@drawable/button_rouded"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>



