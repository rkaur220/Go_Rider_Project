<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/ic_action_reg"
        android:ems="18"
        android:text="Register for Passenger"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp"
        android:typeface="serif" />


    <EditText
        android:id="@+id/pfname"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="115dp"
        android:background="#11000000"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/plname"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="241dp"
        android:layout_marginLeft="241dp"
        android:layout_marginTop="115dp"
        android:background="#11000000"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/pemail"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="182dp"
        android:background="#11000000"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/ppassword"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="228dp"
        android:background="#11000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/titype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ppassword"
        android:layout_alignLeft="@+id/ppassword"
        android:layout_alignParentTop="true"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="266dp"
        android:background="@drawable/ic_password_eye" />

    <EditText
        android:id="@+id/pconfirmpassword"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="300dp"
        android:background="#11000000"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/titype1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pconfirmpassword"
        android:layout_alignLeft="@+id/pconfirmpassword"
        android:layout_alignParentTop="true"
        android:layout_marginStart="306dp"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/ic_password_eye" />

    <EditText
        android:id="@+id/pphonenumber"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="401dp"
        android:background="#11000000"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/paddress"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="443dp"
        android:background="#11000000"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24dp"
        android:typeface="sans" />


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/pregister"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:background="@drawable/button_rouded"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>